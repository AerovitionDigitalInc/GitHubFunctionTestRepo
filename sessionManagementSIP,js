/*  creates a session id -login controller  Aerovition Digital Inc. Applies SIP fo ruser session management.  International Copy right Law @2016 */  app.controller("LoginController", ['$http', '$cookies', function($http, $cookies){      this.credentials = {};      this.http = $http;        this.login = function() {            console.log(this.credentials);          var authdata = btoa(this.credentials.username + ':' + this.credentials.password);          $http.defaults.headers.common['Authorization'] = 'Basic ' + authdata;            console.log($http);          var res = $http.post("http://API_NAME/library");          res.success(function(data, status, header){              alert("Successfull func");              console.log($cookies.get('JSESSIONID'));          });          res.error(function(data, status, headers, config) {              console.log('Error Log');          });      }  }]);  //Set-Cookie:JSESSIONID=azekazEXAMPLErezrzez; Path=/; HttpOnly 
